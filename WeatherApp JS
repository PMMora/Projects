var lat, lon, city;

if (navigator.geolocation) {
  navigator.geolocation.getCurrentPosition(function(position) {
    lat = position.coords.latitude;
    lon = position.coords.longitude;
    getWeather(lat, lon);
    
  });
} else {
  alert("Your browser does not support Geolocations.");
}

function getWeather(lat, lon) {
  var weatherAPI = "api.openweathermap.org/data/2.5/weather?lat=" + lat + "&lon=" + lon + "&APPID=c467b70c9304dab322303a073968eb1b";
  $.getJSON(weatherAPI, function(result) {
    var items = JSON.parse(result);
    city = result.name;
    $("#location").text("The weather in " + city);
  })
}
